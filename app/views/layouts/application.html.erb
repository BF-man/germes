<!DOCTYPE html>
<html>
<head>
  <title> <%= t(:germes) %> </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div id="header">
  <h1><%= t(:germes) %></h1>


  <div class="right">
    <% if user_signed_in? %>
        <span> <%= t(:hello)%> <%= current_user.email %> </span>
        <%= link_to t(:log_out), destroy_user_session_path, :method => :delete %>
    <% else %>
        <%= link_to t(:sign_in), new_user_session_path %>
    <% end %>
  </div>
  </br>
  <div class="right">
    <%= link_to t(:admin_page), admin_user_session_path%>
  </div>
</div>


<%= yield %>

</body>
</html>