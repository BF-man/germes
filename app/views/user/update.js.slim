
- if @error
  | tag = $("#label_for_
  = @user_id
  | ");
  | tag.text("
  = @error
  | ");
  | tag.css({'color':'white','background-color':'red'}).animate({'background-color':'white'}, 4000);
- else
  | tag = $("#label_for_
  = @user_id
  | ");
  | tag.text("
  = t(:updated)
  | ");
  | tag.css({'color':'black', 'background-color':'yellow'}).animate({'color':'white','background-color':'white'}, 4000);